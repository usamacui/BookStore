
@model IEnumerable<BookModel>


<h3 class="display-4" >All Book List </h3>

<div class="container">
    <div class="row">

         
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <h3 class="display-4">All books</h3>
                <div class="card mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top " width="100%" height="225" xmlns="http://www.w3.org/2000/svg" aria-label="Card image cap" />
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card">@book.description </p>
                        <div class="d-flex justif-content-between  align-items-center">
                            <div class="btn-group">
                                <a asp-controller="book" asp-action="getbook" asp-route-id="@book.Id" 
                                   class="btn btn-sm btn-outline-danger-secondery">View details</a>
                            </div>
                            <small class=" text-muted">@book.Author</small>
                        </div>

                    </div>

                </div>
            </div>
        }
    </div>
</div>